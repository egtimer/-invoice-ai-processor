# Invoice AI Processor v2 - Configuration
# Copy this to .env and fill in your values

# ===========================================
# Server Configuration
# ===========================================
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===========================================
# Claude API (for premium extraction)
# ===========================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Model to use (claude-sonnet-4-20250514 recommended for balance of cost/accuracy)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ===========================================
# Extraction Mode
# ===========================================
# Options:
#   - "local_only": Free, ~80% accuracy, uses Docling + patterns
#   - "hybrid": Recommended, escalates to Claude when needed
#   - "llm_only": Always uses Claude, ~95% accuracy, costs money
EXTRACTION_MODE=hybrid

# Confidence threshold below which hybrid mode escalates to LLM
LLM_ESCALATION_THRESHOLD=0.7

# ===========================================
# Docling Configuration
# ===========================================
# Enable OCR for scanned documents
DOCLING_OCR_ENABLED=true

# Table extraction mode: "fast" or "accurate"
DOCLING_TABLE_MODE=accurate

# ===========================================
# File Handling
# ===========================================
# Max file size in bytes (default: 20MB)
MAX_FILE_SIZE=20971520

# Upload directory
UPLOAD_DIR=uploads

# Results directory
RESULTS_DIR=results

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=console
